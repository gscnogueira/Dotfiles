set icons true
set color256 true

cmd open ${{
        case $(file --mime-type $f -b) in
            text/*) nvim $fx;;
            image/*) sxiv $fx;;
            application/pdf) zathura $fx;;
            video/*) mpv $fx;;
            *) for f in $fx; do xdg-open $f > /dev/null 2> /dev/null & done;;
        esac
    }}
cmd mkdir %{{
        printf "Directory Name: "
        read ans
        mkdir $ans
    }}
#MAPPINGS 
map DD delete
map N mkdir
map br $vimv $fx
map <enter> open


